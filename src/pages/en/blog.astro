---
// src/pages/blog.astro
import BaseLayout from '@/layouts/BaseLayout.astro';
import { defaultLanguage, useTranslations, type LanguageCode } from '@/i18n/ui';
import Heading from '@/components/Heading.astro';

const lang = Astro.currentLocale as LanguageCode | undefined ?? defaultLanguage;
const t = useTranslations(lang, 'blogPage');

const pageTitle = t('pageTitle');
const pageDescription = t('pageDescription');

---
<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <section>
    <Heading  
      title={pageTitle} 
      description={pageDescription} 
      showDivider={true} 
      titleClassName='md:text-5xl'
      className="text-center"
    />
    
  
    {/* Contenu du blog Ã  venir : liste des articles, etc. */}
    <div class="border-dashed border-2 border-muted p-8 rounded-md text-center">
      <p class="text-muted-foreground">
        {t('comingSoon')}
      </p>
    </div>
  </section>
</BaseLayout>