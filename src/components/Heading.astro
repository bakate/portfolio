---
import { cn } from '@/lib/utils';

interface Props {
  title: string;
  description: string;
 titleClassName?: string;
 descriptionClassName?: string;
}

const { title, description, titleClassName, descriptionClassName } = Astro.props;
---

<div class="mb-8">
  <h1 class={cn('text-4xl font-bold tracking-tight lg:text-5xl mb-4', titleClassName)}>
    {title}
  </h1>
  <p class={cn('text-lg text-muted-foreground', descriptionClassName)}>
    {description}
  </p>
</div>
